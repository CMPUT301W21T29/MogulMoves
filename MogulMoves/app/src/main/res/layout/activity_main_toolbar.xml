<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="51dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/linear_layout1">


        <ImageButton
            android:id="@+id/user_button"
            style="@style/ButtonCustom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="toUserProfilePage"
            android:src="@drawable/ic_baseline_person" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/scan_qr_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="scanCode"
            android:src="@drawable/ic_baseline_qr_code" />

        <ImageButton
            android:id="@+id/search_exp_button"
            style="@style/ButtonCustom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="toExperimentSearchActivity"
            android:src="@drawable/ic_baseline_search" />

        <ImageButton
            android:id="@+id/add_exp_button"
            style="@style/ButtonCustom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="toNewExperimentActivity"
            android:src="@drawable/ic_baseline_add" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear_layout1"
        android:background="@color/black"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"/>

</RelativeLayout>